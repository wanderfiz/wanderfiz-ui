# Snyk Policy File for Frontend (wanderfiz-ui)
version: v1.25.0

language-settings:
  javascript:
    # Include dev dependencies for frontend security scanning
    excludeDevDependencies: false

patch:
  # React vulnerabilities
  'SNYK-JS-REACT-1017186':
    - '*':
        reason: React vulnerability - auto-patching enabled
        expires: '2025-12-31T23:59:59.999Z'
        
  # Vite vulnerabilities  
  'SNYK-JS-VITE-1017187':
    - '*':
        reason: Vite build tool vulnerability - auto-patching enabled
        expires: '2025-12-31T23:59:59.999Z'

  # TypeScript vulnerabilities
  'SNYK-JS-TYPESCRIPT-1017188':
    - '*':
        reason: TypeScript compiler vulnerability - auto-patching enabled
        expires: '2025-12-31T23:59:59.999Z'

ignore:
  # Frontend specific ignores
  # Example: Development dependency vulnerabilities that don't affect production
  # 'SNYK-JS-DEV-DEPENDENCY-123456':
  #   - '*':
  #       reason: Development dependency vulnerability not present in production build
  #       expires: '2025-06-30T23:59:59.999Z'

monitor: true

# Fail on high and critical vulnerabilities
fail:
  - high
  - critical

# Frontend specific options
options:
  # Monitor both dev and production dependencies
  monitor-dependencies: true
  
  # Enable license compliance for frontend libraries
  license-policy: true
  
  # Frontend specific monitoring
  frontend-security:
    # Monitor for client-side vulnerabilities
    client-side-scanning: true
    # Monitor build tools and dependencies
    build-tools-scanning: true
    # Monitor for XSS and other frontend-specific vulnerabilities
    xss-protection: true